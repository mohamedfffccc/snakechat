<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friend_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/album_sp_20"
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/album_dp_50"
        android:layout_alignParentStart="true"
        android:text="@string/app_name" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/album_dp_50"
        android:layout_height="@dimen/album_dp_50"
        android:src="@drawable/snake_chat2"
        android:layout_toEndOf="@id/friend_name"
        android:layout_marginStart="@dimen/album_sp_20"
        android:id="@+id/friend_image"/>
</RelativeLayout>
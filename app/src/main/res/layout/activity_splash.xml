<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/whiteback"
    tools:context=".view.activity.AuthActivity">


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_300dp"
        app:srcCompat="@drawable/snakelogoic"
        android:id="@+id/imageView"

        />
    <RelativeLayout
        android:layout_marginTop="@dimen/album_dp_100"
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_dp_100"
        android:layout_below="@id/imageView"
        android:orientation="horizontal">

        <Button
            android:textColor="@color/white"
            android:background="@drawable/roundbutton"

            android:id="@+id/button1login"
            android:layout_width="@dimen/album_dp_100"
            android:layout_height="@dimen/dim_100dp"
          android:layout_alignParentLeft="true"
            android:text="@string/login" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/album_dp_40"
            android:layout_width="@dimen/album_dp_50"
            android:layout_height="@dimen/album_dp_50"
            android:text="or"

            android:layout_marginTop="@dimen/dim_20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/button2register"
            android:layout_width="@dimen/album_dp_100"
            android:layout_height="@dimen/dim_100dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dim_10dp"
            android:background="@drawable/roundbutton"
            android:text="@string/register"

            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>

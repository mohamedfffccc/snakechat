<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.ui.chat.MessagesFragment">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagelist"
        android:layout_above="@id/message_lin1"
        android:layout_marginBottom="@dimen/album_dp_10"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_70dp"
        android:layout_margin="@dimen/dim_10dp"
        android:orientation="horizontal"
        android:id="@+id/message_lin1"
        android:layout_alignParentBottom="true">
        <ImageView
            android:src="@drawable/sendimg"
            android:text="Send"
            android:clickable="true"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/dim_50dp"
android:background="@drawable/sendbtnback"
            android:layout_height="@dimen/dim_50dp"
            android:textColor="@color/white"
            android:textSize="@dimen/album_sp_20"
            android:textStyle="bold"


            android:layout_marginBottom="@dimen/dim_5dp"


            android:id="@+id/send_sendbtn"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_margin="@dimen/album_dp_10"

            android:layout_height="@dimen/dim_50dp"
            android:id="@+id/send_edsend"
            android:layout_weight="1"

            android:background="@drawable/editname_background"/>

    </LinearLayout>


</RelativeLayout>